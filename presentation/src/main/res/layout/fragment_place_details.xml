<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/details_layout_padding"
    tools:context=".ui.place_details.PlaceDetailsFragment">


    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gitLoadingDetails"
        android:layout_width="@dimen/gif_loading_size"
        android:layout_height="@dimen/gif_loading_size"
        android:layout_gravity="center"
        android:background="@drawable/loading_gif" />

    <TextView
        android:id="@+id/textViewDetailsError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/error"
        android:textSize="@dimen/text_size_large"
        android:visibility="gone" />

    <ScrollView
        android:id="@+id/scrollView"

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageViewPlaceImage"
                android:layout_width="match_parent"
                android:layout_height="@dimen/place_details_image_height"
                android:layout_gravity="center"
                android:background="@drawable/place_img"
                android:importantForAccessibility="no" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/details_text_margin_bottom"
                android:text="@string/name"
                android:textSize="@dimen/text_size_medium" />

            <TextView
                android:id="@+id/textViewPlaceName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/details_text_margin_bottom"
                android:background="@color/light_gray"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_medium"
                tools:text="Burger king" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/details_text_title_margin_bottom"
                android:text="@string/address"
                android:textSize="@dimen/text_size_medium" />

            <TextView
                android:id="@+id/textViewPlaceAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/details_text_margin_bottom"
                android:background="@color/light_gray"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_medium"
                tools:text="Burger king" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/details_text_title_margin_bottom"
                android:text="@string/categories"
                android:textSize="@dimen/text_size_medium" />

            <TextView
                android:id="@+id/textViewPlaceCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/details_text_margin_bottom"
                android:background="@color/light_gray"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_medium"
                tools:text="Burger king" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/details_text_title_margin_bottom"
                android:text="@string/region"
                android:textSize="@dimen/text_size_medium" />

            <TextView
                android:id="@+id/textViewPlaceRegion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/details_text_margin_bottom"
                android:background="@color/light_gray"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_medium"
                tools:text="Burger king" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/details_text_title_margin_bottom"
                android:text="@string/distance"
                android:textSize="@dimen/text_size_medium" />

            <TextView
                android:id="@+id/textViewPlaceDistance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/details_text_margin_bottom"
                android:background="@color/light_gray"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_medium"
                tools:text="Burger king" />

        </LinearLayout>
    </ScrollView>
</FrameLayout>
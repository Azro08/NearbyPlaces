<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.splash_screen.SplashScreenActivity">

    <Button
        android:id="@+id/buttonLoginToFoursqaure"
        android:layout_width="@dimen/connect_button_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/blue"
        android:text="@string/connect_to_foursquare"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_large"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/imageViewLogo"
        android:layout_width="@dimen/logo_image_width"
        android:layout_height="@dimen/logo_image_height"
        android:layout_gravity="center"
        android:alpha="0.1"
        android:background="@drawable/foursquare_logo"
        android:importantForAccessibility="no" />

</FrameLayout>